<h1>Users</h1>

<%= button_to 'Create User',new_user_path, method: :get %>
<table>
  <tr>
    <th>Email</th>
    <th>Actions</th>
  </tr>
  <% @user.each do |user| %>
  <tr>

    <td><%= user.email %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Delete', user_path(user),method: :delete, data:{turbo_method: :delete,turbo_confirm: 'Are you sure?'} %></td>

  </tr>
  <% end %>
</table>
